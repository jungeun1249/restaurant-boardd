                            this.predictions = []; // ì´ˆê¸°í™”
                        };
                        reader.readAsDataURL(file);
                    }
                },
                async analyzeImage() {
                    this.isAnalyzing = true;
                    try {
                        const img = this.$refs.imageRef;
                        // MobileNet ëª¨ë¸ ë¡œë“œ
                        const model = await mobilenet.load();
                        // ì´ë¯¸ì§€ ë¶„ë¥˜ ì‹¤í–‰
                        const predictions = await model.classify(img);
