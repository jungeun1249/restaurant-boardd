    <script>
        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    imageLoaded: false,
                    isAnalyzing: false,
                    predictions: []
                }
            },
            methods: {
                onFileChange(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = (e) => {
                            const img = this.$refs.imageRef;
                            img.src = e.target.result;
                            img.style.display = 'block';
